{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": [
      "src/types/index.ts",
      "node_modules/@types",
    ],
    "outDir": "./built"
  },
  "include": [
    "./src/**/*",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}